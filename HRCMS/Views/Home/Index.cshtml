@model HRCMS.ViewModels.UserModel
@{
    ViewData["Title"] = "Home Page";
}


<h1 class="display-4">Welcome</h1>

<div class="row">
    <div class="col-md-4 offset-md-4">

        <form asp-action="Login">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <span class="font-weight-bolder">
                    @Html.LabelFor(m => m.UserName, "User Name:", new { @class = "control-label" })
                </span>
                @Html.TextBoxFor(m => m.UserName, new { @class = "form-control", @maxlength = "50", @type = "username" })
                @Html.ValidationMessageFor(m => m.UserName, "", htmlAttributes: new { @class = "text-danger" })
            </div>
            <div class="form-group">
                <input type="submit" value="Login" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
